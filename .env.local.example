# Firebase Client SDK Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK Configuration
# Paste the entire service account JSON as a single line
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate limiting (Upstash Redis) - optional; zonder deze wordt er niet rate-limited (bv. lokaal)
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token

# Cloudflare Turnstile (bot-challenge na mislukte pogingen) - optional
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_site_key
TURNSTILE_SECRET_KEY=your_secret_key

# Cloud Logging - optional; bij GCP/Google Cloud worden logs naar Cloud Logging geschreven
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GOOGLE_CLOUD_PROJECT=your_project_id

# Backup Configuration
BACKUP_BUCKET_NAME=backuptoernooiprof
# Voor automatische backup elke nacht om 5 uur: zet een geheim en gebruik cron "0 5 * * *" â†’ zie docs/backup-cron.md
BACKUP_CRON_SECRET=generate_a_random_secret_here_minimum_32_characters
